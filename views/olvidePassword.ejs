<main class="contenedor contenedor-formularios">
    <h1>
        <%= pagina %>
    </h1>
    <form action="/olvidePassword" method="post" class="default-form">
        <input type="hidden" name="_csrf" value=<%=csrfToken%>>
        <div class="campo">
            <input class="form-control" type="email" name="email" placeholder="Tu email">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Enviar" class="btn btn-azul">
        </div>
    </form>
</main>