<main class="contenedor contenedor-formularios">
    <h1><%= pagina %></h1>
    <form action="/resetPassword/<%= token %>" method="post" class="default-form">
        <input type="hidden" name="_csrf" value= <%=csrfToken%>>
        <div class="campo">
            
            <input type="password" name="password" placeholder="Contraseña nueva">
        </div>
        <div class="campo">
            <input type="password" name="confirmar" placeholder="Repite la Contraseña">
        </div>
       
        <div class="campo enviar">
            <input type="submit" value="Cambiar Contraseña" class="btn btn-azul">
        </div>
    </form>
</main>